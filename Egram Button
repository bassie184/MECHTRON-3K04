#Serial communication
import serial
import time

def setup():
    serial.begin(115200)

def loop():
    atr_signal_data = analogRead(A0) # in here goes pin for atr_signal
    vent_signal_data = analogRead(A1) # in here goes pin for vent_signal
    serial.println(atr_signal_data, vent_signal_data)

def egram(self):
